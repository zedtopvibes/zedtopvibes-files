        }

        // ===========================================
        // UPDATED FUNCTIONS FOR PLAYLISTS TAB
        // ===========================================
        
        // Render Playlists tab content
        function renderPlaylistsTab() {
            renderTrendingPlaylists();
            renderMoodPlaylists();
            renderNewPlaylists();
        }
        
        // Render trending playlists grid
        function renderTrendingPlaylists() {
            let html = '';
            trendingPlaylists.forEach(playlist => {
                html += `
                    <div class="music-card album" data-id="${playlist.id}" data-type="playlist">
                        <div class="image-container">
                            <img src="${playlist.image}" alt="${playlist.title}" class="card-image">
                            <div class="card-badge">TRENDING</div>
                        </div>
                        <div class="card-content">
                            <div class="card-title">${playlist.title}</div>
                            <div class="card-subtitle">${playlist.subtitle}</div>
                        </div>
                    </div>
                `;
            });
            trendingPlaylistsGridEl.innerHTML = html;
        }
        
        // Render mood playlists grid
        function renderMoodPlaylists() {
            let html = '';
            moodPlaylists.forEach(playlist => {
                html += `
                    <div class="music-card album" data-id="${playlist.id}" data-type="playlist">
                        <div class="image-container">
                            <img src="${playlist.image}" alt="${playlist.title}" class="card-image">
                            <div class="card-badge">MOOD</div>
                        </div>
                        <div class="card-content">
                            <div class="card-title">${playlist.title}</div>
                            <div class="card-subtitle">${playlist.subtitle}</div>
                        </div>
                    </div>
                `;
            });
            moodPlaylistsGridEl.innerHTML = html;
        }
        
        // Render new playlists grid
        function renderNewPlaylists() {
            let html = '';
            newPlaylists.forEach(playlist => {
                html += `
                    <div class="music-card album" data-id="${playlist.id}" data-type="playlist">
                        <div class="image-container">
                            <img src="${playlist.image}" alt="${playlist.title}" class="card-image">
                            <div class="card-badge">NEW</div>
                        </div>
                        <div class="card-content">
                            <div class="card-title">${playlist.title}</div>
                            <div class="card-subtitle">${playlist.subtitle}</div>
                        </div>
                    </div>
                `;
            });
            newPlaylistsGridEl.innerHTML = html;
        }

        // Go to specific slide
        function goToSlide(index) {
            const slides = document.querySelectorAll('.featured-card');
            const dots = document.querySelectorAll('.slider-dot');
            
            if (index >= slides.length) index = 0;
            if (index < 0) index = slides.length - 1;
            
            // Remove active class from all slides and dots
            slides.forEach(slide => slide.classList.remove('active'));
            dots.forEach(dot => dot.classList.remove('active'));
            
            // Add active class to current slide and dot
            slides[index].classList.add('active');
            dots[index].classList.add('active');
            
            // Update slider track position
            sliderTrack.style.transform = `translateX(-${index * 100}%)`;
            
            currentSlide = index;
        }

        // Next slide
        function nextSlide() {
            goToSlide(currentSlide + 1);
        }

        // Previous slide
        function prevSlide() {
            goToSlide(currentSlide - 1);
        }

        // Start auto sliding
        function startAutoSlide() {
            clearInterval(slideInterval);
            slideInterval = setInterval(nextSlide, slideDuration);
        }

        // Pause auto sliding
        function pauseAutoSlide() {
            clearInterval(slideInterval);
        }

        // Resume auto sliding
        function resumeAutoSlide() {
            startAutoSlide();
        }

        // Updated rendering functions from original file
        function renderTrendingSingles() {
            let html = '';
            singles.forEach(single => {
                html += `
                    <div class="music-card song" data-id="${single.id}" data-type="single">
                        <div class="image-container">
                            <img src="${single.image}" alt="${single.title}" class="card-image">
                            <div class="card-badge">${single.badge}</div>
                        </div>
                        <div class="card-content">
                            <div class="card-title">${single.title}</div>
                        </div>
                    </div>
                `;
            });
            trendingSinglesEl.innerHTML = html;
        }

        function renderPopularArtists() {
            let html = '';
            artists.forEach(artist => {
                html += `
                    <div class="music-card artist" data-id="${artist.id}" data-type="artist">
                        <div class="image-container">
                            <img src="${artist.image}" alt="${artist.name}" class="card-image">
                        </div>
                        <div class="card-content">
                            <div class="card-title">${artist.name}</div>
                        </div>
                    </div>
                `;
            });
            popularArtistsEl.innerHTML = html;
        }

        function renderNewAlbums() {
            let html = '';
            albums.forEach(album => {
                html += `
                    <div class="music-card album" data-id="${album.id}" data-type="album">
                        <div class="image-container">
                            <img src="${album.image}" alt="${album.title}" class="card-image">
                        </div>
                        <div class="card-content">
                            <div class="card-title">${album.title}</div>
                            <div class="card-subtitle">${album.subtitle}</div>
                        </div>
                    </div>
                `;
            });
            newAlbumsEl.innerHTML = html;
        }

        function renderLatestBollywood() {
            let html = '';
            singles.slice(0, 4).forEach(single => {
                html += `
                    <div class="music-card bollywood" data-id="${single.id}" data-type="bollywood">
                        <div class="image-container">
                            <img src="${single.image}" alt="${single.title}" class="card-image">
                            <div class="card-badge">${single.badge}</div>
                        </div>
                        <div class="card-content">
                            <div class="card-title">${single.title}</div>
                        </div>
                    </div>
                `;
            });
            latestBollywoodEl.innerHTML = html;
        }

        function renderRelatedSongs() {
            let html = '';
            singles.slice(0, 4).forEach(single => {
                html += `
                    <div class="music-card related" data-id="${single.id}" data-type="related">
                        <div class="image-container">
                            <img src="${single.image}" alt="${single.title}" class="card-image">
                            <div class="card-badge">${single.badge}</div>
                        </div>
                        <div class="card-content">
                            <div class="card-title">${single.title}</div>
                        </div>
                    </div>
                `;
            });
            relatedSongsEl.innerHTML = html;
        }

        function renderCategories() {
            let html = '';
            categories.forEach(category => {
                html += `
                    <li class="category-item" data-id="${category.id}">
                        <div class="category-icon">
                            <i class="${category.icon}"></i>
                        </div>
                        <div class="category-name">${category.name}</div>
                    </li>
                `;
            });
            categoriesListEl.innerHTML = html;
        }

        // ===========================================
        // UPDATED FUNCTION FOR TAB SWITCHING
        // ===========================================
        
        // Switch between Home, Artists, and Playlists tabs
        function switchTab(tabName) {
            // Update active tab
            homeTab.classList.toggle('active', tabName === 'home');
            artistsTab.classList.toggle('active', tabName === 'artists');
            playlistsTab.classList.toggle('active', tabName === 'playlists');
            
            // Show/hide feed content
            homeFeed.classList.toggle('hidden', tabName !== 'home');
            artistsFeed.classList.toggle('hidden', tabName !== 'artists');
            playlistsFeed.classList.toggle('hidden', tabName !== 'playlists');
            
            // Pause slider when not on home tab
            if (tabName !== 'home') {
                pauseAutoSlide();
            } else {
                resumeAutoSlide();
            }
        }

        // Setup event listeners
        function setupEventListeners() {
            // ===========================================
            // UPDATED: Tab switching listeners
            // ===========================================
            homeTab.addEventListener('click', () => switchTab('home'));
            artistsTab.addEventListener('click', () => switchTab('artists'));
            playlistsTab.addEventListener('click', () => switchTab('playlists'));
            
            // Slider navigation
            prevBtn.addEventListener('click', () => {
                prevSlide();
                pauseAutoSlide();
                setTimeout(resumeAutoSlide, 10000); // Resume after 10 seconds
            });
            
            nextBtn.addEventListener('click', () => {
                nextSlide();
                pauseAutoSlide();
                setTimeout(resumeAutoSlide, 10000); // Resume after 10 seconds
            });
            
            // Dot navigation
            sliderDots.addEventListener('click', (e) => {
                if (e.target.classList.contains('slider-dot')) {
                    const index = parseInt(e.target.getAttribute('data-index'));
                    goToSlide(index);
                    pauseAutoSlide();
                    setTimeout(resumeAutoSlide, 10000); // Resume after 10 seconds
                }
            });
            
            // Pause auto-slide on hover
            const slider = document.getElementById('featuredSlider');
            slider.addEventListener('mouseenter', pauseAutoSlide);
            slider.addEventListener('touchstart', pauseAutoSlide);
            slider.addEventListener('mouseleave', resumeAutoSlide);
            
            // Touch swipe functionality for mobile
            let touchStartX = 0;
            let touchEndX = 0;
            
            slider.addEventListener('touchstart', (e) => {
                touchStartX = e.changedTouches[0].screenX;
            });
            
            slider.addEventListener('touchend', (e) => {
                touchEndX = e.changedTouches[0].screenX;
                handleSwipe();
            });
            
            function handleSwipe() {
                const swipeThreshold = 50;
                const diff = touchStartX - touchEndX;
                
                if (Math.abs(diff) > swipeThreshold) {
                    if (diff > 0) {
                        // Swipe left - next slide
                        nextSlide();
                    } else {
                        // Swipe right - previous slide
                        prevSlide();
                    }
                    pauseAutoSlide();
                    setTimeout(resumeAutoSlide, 10000);
                }
            }
            
            // Featured card button actions
            sliderTrack.addEventListener('click', (e) => {
                if (e.target.classList.contains('card-download-btn') || 
                    e.target.parentElement.classList.contains('card-download-btn')) {
                    const btn = e.target.classList.contains('card-download-btn') ? 
                        e.target : e.target.parentElement;
                    const id = btn.getAttribute('data-id');
                    alert(`Downloading featured content (ID: ${id})\n(This is a demo - in a real app, this would start the download)`);
                }
                
                if (e.target.classList.contains('card-play-btn') || 
                    e.target.parentElement.classList.contains('card-play-btn')) {
                    const btn = e.target.classList.contains('card-play-btn') ? 
                        e.target : e.target.parentElement;
                    const id = btn.getAttribute('data-id');
                    alert(`Playing featured content (ID: ${id})\n(This is a demo - in a real app, this would play the song)`);
                }
            });
            
            // Existing functionality from original file
            // Search functionality
            const searchInput = document.getElementById('searchInput');
            const searchBtn = document.getElementById('searchBtn');
            
            const handleSearch = () => {
                const query = searchInput.value.trim();
                if (query) {
                    alert(`Searching for: "${query}"\n(This is a demo - in a real app, this would show results for "${query}")`);
                    searchInput.value = '';
                } else {
                    alert('Please enter a search term');
                }
            };
            
            searchBtn.addEventListener('click', handleSearch);
            searchInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    handleSearch();
                }
            });
            
            // More+ buttons functionality
            const moreButtons = document.querySelectorAll('.more-btn');
            moreButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const sectionTitle = this.parentElement.querySelector('.section-title').textContent;
                    alert(`Loading more content for "${sectionTitle}" section...\n(This is a demo - in a real app, this would load more items)`);
                });
            });
            
            // Category items functionality
            const categoryItems = document.querySelectorAll('.category-item');
            categoryItems.forEach(item => {
                item.addEventListener('click', function() {
                    const categoryId = this.getAttribute('data-id');
                    const categoryName = this.querySelector('.category-name').textContent;
                    alert(`Opening category: ${categoryName}\n(This is a demo - in a real app, this would show all ${categoryName})`);
                });
            });
            
            // Updated event listener to handle click on entire card
            document.addEventListener('click', function(e) {
                // Check if clicked element is a music card or inside one
                const musicCard = e.target.closest('.music-card');
                if (musicCard) {
                    const id = musicCard.getAttribute('data-id');
                    const type = musicCard.getAttribute('data-type');
                    let itemType = '';
                    
                    switch(type) {
                        case 'single':
                            itemType = 'Single Track';
                            break;
                        case 'artist':
                        case 'artist-view':
                            itemType = 'Artist';
                            break;
                        case 'album':
                            itemType = 'Album';
                            break;
                        case 'bollywood':
                            itemType = 'Bollywood Song';
                            break;
                        case 'related':
                            itemType = 'Related Song';
                            break;
                        case 'playlist':
                            itemType = 'Playlist';
                            break;
                        default:
                            itemType = 'Item';
                    }
                    
                    alert(`Opening ${itemType} detail page (ID: ${id})\n(This is a demo - in a real app, this would navigate to the ${itemType.toLowerCase()} page)`);
                    return; // Prevent further processing
                }
                
                // Keep existing button functionality for featured slider
                if (e.target.classList.contains('download-btn')) {
                    const id = e.target.getAttribute('data-id');
                    const type = e.target.getAttribute('data-type');
                    let itemType = '';
                    
                    switch(type) {
                        case 'single':
                            itemType = 'Single Track';
                            break;
                        case 'artist':
                            itemType = 'Artist';
                            break;
                        case 'album':
                            itemType = 'Album';
                            break;
                        case 'bollywood':
                            itemType = 'Bollywood Song';
                            break;
                        case 'related':
                            itemType = 'Related Song';
                            break;
                        case 'artist-view':
                            itemType = 'Artist Songs';
                            break;
                        case 'playlist':
                            itemType = 'Playlist';
                            break;
                        default:
                            itemType = 'Item';
                    }
                    
                    alert(`Opening ${itemType} (ID: ${id})\n(This is a demo - in a real app, this would show the content)`);
                }
            });
        }

        // Initialize the page when DOM is loaded
        document.addEventListener('DOMContentLoaded', initPage);
    </script>
</body>
</html>
