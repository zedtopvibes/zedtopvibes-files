        function renderFollowingFeed() {
            renderFollowingPosts();
            renderFollowingArtists();
            renderFollowingReleases();
        }
        
        // Render posts from followed artists
        function renderFollowingPosts() {
            let postsHTML = '';
            
            followedArtists.forEach(artist => {
                artist.posts.forEach(post => {
                    postsHTML += `
                        <div class="following-feed-item">
                            <div class="following-artist-header">
                                <img src="${artist.image}" alt="${artist.name}" class="following-artist-avatar">
                                <div class="following-artist-name">${artist.name}</div>
                                <div class="following-badge">Followed Artist</div>
                                <div class="following-post-time">${post.time}</div>
                            </div>
                            <div class="following-post-content">
                                <div class="following-post-text">${post.text}</div>
                                <div class="music-card song" style="height: auto; margin: 0;">
                                    <div class="image-container">
                                        <img src="${post.song.image}" alt="${post.song.title}" class="card-image">
                                        <div class="card-badge following-card-badge">NEW RELEASE</div>
                                    </div>
                                    <div class="card-content">
                                        <div class="card-title">${post.song.title}</div>
                                        <button class="download-btn" data-id="${post.id}" data-type="following">Download MP3</button>
                                    </div>
                                </div>
                            </div>
                            <div class="following-post-actions">
                                <button class="following-action-btn" data-id="${post.id}">
                                    <i class="fas fa-heart"></i> Like
                                </button>
                                <button class="following-action-btn" data-id="${post.id}">
                                    <i class="fas fa-share"></i> Share
                                </button>
                                <button class="following-action-btn" data-id="${post.id}">
                                    <i class="fas fa-comment"></i> Comment
                                </button>
                            </div>
                        </div>
                    `;
                });
            });
            
            followingPostsEl.innerHTML = postsHTML;
        }
        
