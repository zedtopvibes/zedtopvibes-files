        // Slider Variables
        let currentSlide = 0;
        let slideInterval;
        const slideDuration = 5000; // 5 seconds

        // Initialize the page with content
        function initPage() {
            renderFeaturedSlider();
            renderTrendingSingles();
            renderPopularArtists();
            renderNewAlbums();
            renderLatestBollywood();
            renderRelatedSongs();
            renderCategories();
            // NEW: Render Following feed content
            renderFollowingFeed();
            // NEW: Render For You feed content
            renderForYouFeed();
            setupEventListeners();
            startAutoSlide();
        }

        // Render featured slider
        function renderFeaturedSlider() {
            let sliderHTML = '';
            let dotsHTML = '';
            
            featuredPosts.forEach((post, index) => {
                const activeClass = index === 0 ? 'active' : '';
                sliderHTML += `
                    <div class="featured-card ${activeClass}" data-index="${index}">
                        <div class="card-badge ${post.badgeClass}">${post.badge}</div>
                        <img src="${post.image}" alt="${post.title}" class="card-image">
                        <div class="card-overlay">
                            <h3 class="card-title">${post.title}</h3>
                            <p class="card-artist">${post.artist}</p>
                            <div class="card-actions">
                                <button class="card-download-btn" data-id="${post.id}" data-type="featured">
                                    <i class="fas fa-download"></i> Download
                                </button>
                                <button class="card-play-btn" data-id="${post.id}">
                                    <i class="fas fa-play"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                `;
                
                dotsHTML += `<div class="slider-dot ${index === 0 ? 'active' : ''}" data-index="${index}"></div>`;
            });
            
            sliderTrack.innerHTML = sliderHTML;
            sliderDots.innerHTML = dotsHTML;
        }

        // ===========================================
