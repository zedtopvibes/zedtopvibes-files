        const newPlaylists = [
            { id: 601, title: "New Releases 2023", subtitle: "Latest songs collection", image: "https://images.unsplash.com/photo-1511671782779-c97d3d27a1d4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80" },
            { id: 602, title: "Indie Discover", subtitle: "Independent artists", image: "https://images.unsplash.com/photo-1493225457124-a3eb161ffa5f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80" },
            { id: 603, title: "Acoustic Sessions", subtitle: "Unplugged versions", image: "https://images.unsplash.com/photo-1518609878373-06d740f60d8b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80" },
            { id: 604, title: "Retro Rewind", subtitle: "90s & 2000s hits", image: "https://images.unsplash.com/photo-1470225620780-dba8ba36b745?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80" },
            { id: 605, title: "Regional Mix", subtitle: "Multi-language hits", image: "https://images.unsplash.com/photo-1511379938547-c1f69419868d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80" },
            { id: 606, title: "Festive Special", subtitle: "Celebration songs", image: "https://images.unsplash.com/photo-1517230878791-4d28214057c2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80" }
        ];

        // DOM Elements
        const sliderTrack = document.getElementById('sliderTrack');
        const sliderDots = document.getElementById('sliderDots');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const trendingSinglesEl = document.getElementById('trendingSingles');
        const popularArtistsEl = document.getElementById('popularArtists');
        const newAlbumsEl = document.getElementById('newAlbums');
        const latestBollywoodEl = document.getElementById('latestBollywood');
        const relatedSongsEl = document.getElementById('relatedSongs');
        const categoriesListEl = document.getElementById('categoriesList');
        
        // UPDATED DOM Elements for tabs
        const homeTab = document.getElementById('homeTab');
        const artistsTab = document.getElementById('artistsTab');
        const playlistsTab = document.getElementById('playlistsTab');
        const homeFeed = document.getElementById('homeFeed');
        const artistsFeed = document.getElementById('artistsFeed');
        const playlistsFeed = document.getElementById('playlistsFeed');
        
        // Artists Tab Elements
        const featuredArtistsGridEl = document.getElementById('featuredArtistsGrid');
        const popularSingersGridEl = document.getElementById('popularSingersGrid');
        const risingStarsGridEl = document.getElementById('risingStarsGrid');
        
        // Playlists Tab Elements
        const trendingPlaylistsGridEl = document.getElementById('trendingPlaylistsGrid');
        const moodPlaylistsGridEl = document.getElementById('moodPlaylistsGrid');
        const newPlaylistsGridEl = document.getElementById('newPlaylistsGrid');

        // Slider Variables
        let currentSlide = 0;
        let slideInterval;
        const slideDuration = 5000; // 5 seconds

        // Initialize the page with content
        function initPage() {
            renderFeaturedSlider();
            renderTrendingSingles();
            renderPopularArtists();
            renderNewAlbums();
            renderLatestBollywood();
            renderRelatedSongs();
            renderCategories();
            // UPDATED: Render Artists tab content
            renderArtistsTab();
            // UPDATED: Render Playlists tab content
            renderPlaylistsTab();
            setupEventListeners();
            startAutoSlide();
        }

        // Render featured slider
        function renderFeaturedSlider() {
            let sliderHTML = '';
            let dotsHTML = '';
            
            featuredPosts.forEach((post, index) => {
                const activeClass = index === 0 ? 'active' : '';
                sliderHTML += `
                    <div class="featured-card ${activeClass}" data-index="${index}">
                        <div class="card-badge ${post.badgeClass}">${post.badge}</div>
                        <img src="${post.image}" alt="${post.title}" class="card-image">
                        <div class="card-overlay">
                            <h3 class="card-title">${post.title}</h3>
                            <p class="card-artist">${post.artist}</p>
                            <div class="card-actions">
                                <button class="card-download-btn" data-id="${post.id}" data-type="featured">
                                    <i class="fas fa-download"></i> Download
                                </button>
                                <button class="card-play-btn" data-id="${post.id}">
                                    <i class="fas fa-play"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                `;
                
                dotsHTML += `<div class="slider-dot ${index === 0 ? 'active' : ''}" data-index="${index}"></div>`;
            });
            
            sliderTrack.innerHTML = sliderHTML;
            sliderDots.innerHTML = dotsHTML;
        }

        // ===========================================
        // UPDATED FUNCTIONS FOR ARTISTS TAB
        // ===========================================
        
        // Render Artists tab content
        function renderArtistsTab() {
            renderFeaturedArtists();
            renderPopularSingers();
            renderRisingStars();
        }
        
        // Render featured artists grid
        function renderFeaturedArtists() {
            let html = '';
            featuredArtists.forEach(artist => {
                html += `
                    <div class="music-card artist" data-id="${artist.id}" data-type="artist-view">
                        <div class="image-container">
                            <img src="${artist.image}" alt="${artist.name}" class="card-image">
                            <div class="card-badge">FEATURED</div>
                        </div>
                        <div class="card-content">
                            <div class="card-title">${artist.name}</div>
                        </div>
                    </div>
                `;
            });
            featuredArtistsGridEl.innerHTML = html;
        }
        
        // Render popular singers grid
        function renderPopularSingers() {
            let html = '';
            popularSingers.forEach(artist => {
                html += `
                    <div class="music-card artist" data-id="${artist.id}" data-type="artist-view">
                        <div class="image-container">
                            <img src="${artist.image}" alt="${artist.name}" class="card-image">
                            <div class="card-badge">POPULAR</div>
                        </div>
                        <div class="card-content">
                            <div class="card-title">${artist.name}</div>
                        </div>
                    </div>
                `;
            });
            popularSingersGridEl.innerHTML = html;
        }
        
        // Render rising stars grid
        function renderRisingStars() {
