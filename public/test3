            { id: 10, title: "Sooryavanshi", subtitle: "Action Album", image: "https://images.unsplash.com/photo-1511671782779-c97d3d27a1d4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NTB8fGFsYnVtJTIwY292ZXJ8ZW58MHx8MHx8fDA%3D&w=400&h=400&fit=crop" },
            { id: 11, title: "Badhai Do", subtitle: "Comedy Drama Songs", image: "https://images.unsplash.com/photo-1470225620780-dba8ba36b745?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NTV8fGFsYnVtJTIwY292ZXJ8ZW58MHx8MHx8fDA%3D&w=400&h=400&fit=crop" },
            { id: 12, title: "Jugjugg Jeeyo", subtitle: "Family Drama Album", image: "https://images.unsplash.com/photo-1511379938547-c1f69419868d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NjB8fGFsYnVtJTIwY292ZXJ8ZW58MHx8MHx8fDA%3D&w=400&h=400&fit=crop" }
        ];

        const categories = [
            { id: 1, name: "Hindi Songs", icon: "fas fa-music" },
            { id: 2, name: "Odia Songs", icon: "fas fa-headphones" },
            { id: 3, name: "Punjabi Songs", icon: "fas fa-guitar" },
            { id: 4, name: "Tamil Songs", icon: "fas fa-play-circle" },
            { id: 5, name: "Bhojpuri Songs", icon: "fas fa-compact-disc" },
            { id: 6, name: "English Songs", icon: "fas fa-globe" },
            { id: 7, name: "Remix Songs", icon: "fas fa-sync-alt" },
            { id: 8, name: "Devotional", icon: "fas fa-pray" }
        ];

        // DOM Elements
        const trendingSinglesEl = document.getElementById('trendingSingles');
        const popularArtistsEl = document.getElementById('popularArtists');
        const newAlbumsEl = document.getElementById('newAlbums');
        const latestBollywoodEl = document.getElementById('latestBollywood');
        const relatedSongsEl = document.getElementById('relatedSongs');
        const categoriesListEl = document.getElementById('categoriesList');

        // Initialize the page with content
        function initPage() {
            renderTrendingSingles();
            renderPopularArtists();
            renderNewAlbums();
            renderLatestBollywood();
            renderRelatedSongs();
            renderCategories();
            setupEventListeners();
        }

        // Render trending singles
        function renderTrendingSingles() {
            let html = '';
            singles.forEach(single => {
                html += `
                    <div class="music-card">
                        <div class="image-container">
                            <img src="${single.image}" alt="${single.title}" class="card-image">
                            <div class="card-badge">${single.badge}</div>
                        </div>
                        <div class="card-content">
                            <div class="card-title">${single.title}</div>
                            <button class="download-btn" data-id="${single.id}" data-type="single">Download MP3</button>
                        </div>
                    </div>
                `;
            });
            trendingSinglesEl.innerHTML = html;
        }

        // Render popular artists
        function renderPopularArtists() {
            let html = '';
            artists.forEach(artist => {
                html += `
                    <div class="music-card">
                        <div class="image-container">
                            <img src="${artist.image}" alt="${artist.name}" class="card-image">
                        </div>
                        <div class="card-content">
                            <div class="card-title">${artist.name}</div>
                            <button class="download-btn" data-id="${artist.id}" data-type="artist">View Songs</button>
                        </div>
                    </div>
                `;
            });
            popularArtistsEl.innerHTML = html;
        }

        // Render new albums
        function renderNewAlbums() {
            let html = '';
            albums.forEach(album => {
                html += `
                    <div class="music-card">
                        <div class="image-container">
                            <img src="${album.image}" alt="${album.title}" class="card-image">
                        </div>
                        <div class="card-content">
                            <div class="card-title">${album.title}</div>
                            <div class="card-subtitle">${album.subtitle}</div>
                            <button class="download-btn" data-id="${album.id}" data-type="album">Download Album</button>
                        </div>
                    </div>
                `;
            });
            newAlbumsEl.innerHTML = html;
        }

        // Render latest Bollywood (using singles data)
        function renderLatestBollywood() {
            let html = '';
            singles.slice(0, 12).forEach(single => {
                html += `
                    <div class="music-card">
                        <div class="image-container">
                            <img src="${single.image}" alt="${single.title}" class="card-image">
                            <div class="card-badge">${single.badge}</div>
                        </div>
                        <div class="card-content">
                            <div class="card-title">${single.title}</div>
                            <button class="download-btn" data-id="${single.id}" data-type="bollywood">Download MP3</button>
                        </div>
                    </div>
                `;
            });
            latestBollywoodEl.innerHTML = html;
        }

        // Render related songs (using singles data)
        function renderRelatedSongs() {
            let html = '';
            singles.slice(0, 12).forEach(single => {
                html += `
                    <div class="music-card">
                        <div class="image-container">
                            <img src="${single.image}" alt="${single.title}" class="card-image">
                            <div class="card-badge">${single.badge}</div>
                        </div>
                        <div class="card-content">
                            <div class="card-title">${single.title}</div>
                            <button class="download-btn" data-id="${single.id}" data-type="related">Download MP3</button>
                        </div>
                    </div>
                `;
            });
            relatedSongsEl.innerHTML = html;
        }

        // Render categories
        function renderCategories() {
            let html = '';
            categories.forEach(category => {
                html += `
                    <li class="category-item" data-id="${category.id}">
                        <div class="category-icon">
                            <i class="${category.icon}"></i>
                        </div>
                        <div class="category-name">${category.name}</div>
                    </li>
                `;
            });
            categoriesListEl.innerHTML = html;
        }

        // Setup event listeners
        function setupEventListeners() {
            // Search functionality
            const searchInput = document.getElementById('searchInput');
            const searchBtn = document.getElementById('searchBtn');
            
            const handleSearch = () => {
                const query = searchInput.value.trim();
                if (query) {
                    alert(`Searching for: "${query}"\n(This is a demo - in a real app, this would show results for "${query}")`);
                    searchInput.value = '';
                } else {
                    alert('Please enter a search term');
                }
            };
            
            searchBtn.addEventListener('click', handleSearch);
            searchInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    handleSearch();
                }
            });
            
            // More+ buttons functionality
            const moreButtons = document.querySelectorAll('.more-btn');
            moreButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const sectionTitle = this.parentElement.querySelector('.section-title').textContent;
                    alert(`Loading more content for "${sectionTitle}" section...\n(This is a demo - in a real app, this would load more items)`);
                });
            });
            
            // Download/View buttons functionality
            document.addEventListener('click', function(e) {
                if (e.target.classList.contains('download-btn')) {
                    const id = e.target.getAttribute('data-id');
                    const type = e.target.getAttribute('data-type');
                    let itemType = '';
                    
                    switch(type) {
                        case 'single':
                            itemType = 'Single Track';
                            break;
                        case 'artist':
                            itemType = 'Artist';
                            break;
                        case 'album':
                            itemType = 'Album';
                            break;
                        case 'bollywood':
                            itemType = 'Bollywood Song';
                            break;
                        case 'related':
                            itemType = 'Related Song';
                            break;
                        default:
                            itemType = 'Item';
                    }
                    
                    alert(`Downloading ${itemType} (ID: ${id})\n(This is a demo - in a real app, this would start the download)`);
                }
            });
            
            // Category items functionality
            const categoryItems = document.querySelectorAll('.category-item');
            categoryItems.forEach(item => {
                item.addEventListener('click', function() {
                    const categoryId = this.getAttribute('data-id');
                    const categoryName = this.querySelector('.category-name').textContent;
                    alert(`Opening category: ${categoryName}\n(This is a demo - in a real app, this would show all ${categoryName})`);
                });
            });
        }

        // Initialize the page when DOM is loaded
        document.addEventListener('DOMContentLoaded', initPage);
    </script>
</body>
</html>
