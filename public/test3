        // ===========================================
        // UPDATED FUNCTION FOR TAB SWITCHING (Now with 3 tabs)
        // ===========================================
        
        // Switch between Home, Following, and For You tabs
        function switchTab(tabName) {
            // Update active tab
            homeTab.classList.toggle('active', tabName === 'home');
            followingTab.classList.toggle('active', tabName === 'following');
            forYouTab.classList.toggle('active', tabName === 'forYou');
            
            // Show/hide feed content
            homeFeed.classList.toggle('hidden', tabName !== 'home');
            followingFeed.classList.toggle('hidden', tabName !== 'following');
            forYouFeed.classList.toggle('hidden', tabName !== 'forYou');
            
            // Pause slider when not on home tab
            if (tabName !== 'home') {
                pauseAutoSlide();
            } else {
                resumeAutoSlide();
            }
        }

        // Setup event listeners
        function setupEventListeners() {
            // ===========================================
            // NEW: Tab switching listeners
            // ===========================================
            homeTab.addEventListener('click', () => switchTab('home'));
            followingTab.addEventListener('click', () => switchTab('following'));
            forYouTab.addEventListener('click', () => switchTab('forYou'));
            
            // Demo follow button (if enabled)
            if (demoFollowBtn) {
                demoFollowBtn.addEventListener('click', () => {
                    alert("This is a demo. In a real app, you would follow artists to see their posts here.");
                });
            }
            
            // Slider navigation
            prevBtn.addEventListener('click', () => {
                prevSlide();
                pauseAutoSlide();
                setTimeout(resumeAutoSlide, 10000); // Resume after 10 seconds
            });
            
            nextBtn.addEventListener('click', () => {
                nextSlide();
                pauseAutoSlide();
                setTimeout(resumeAutoSlide, 10000); // Resume after 10 seconds
            });
            
            // Dot navigation
            sliderDots.addEventListener('click', (e) => {
                if (e.target.classList.contains('slider-dot')) {
                    const index = parseInt(e.target.getAttribute('data-index'));
                    goToSlide(index);
                    pauseAutoSlide();
                    setTimeout(resumeAutoSlide, 10000); // Resume after 10 seconds
                }
            });
            
            // Pause auto-slide on hover
            const slider = document.getElementById('featuredSlider');
            slider.addEventListener('mouseenter', pauseAutoSlide);
            slider.addEventListener('touchstart', pauseAutoSlide);
            slider.addEventListener('mouseleave', resumeAutoSlide);
            
            // Touch swipe functionality for mobile
            let touchStartX = 0;
            let touchEndX = 0;
            
            slider.addEventListener('touchstart', (e) => {
                touchStartX = e.changedTouches[0].screenX;
            });
            
            slider.addEventListener('touchend', (e) => {
                touchEndX = e.changedTouches[0].screenX;
                handleSwipe();
            });
            
            function handleSwipe() {
                const swipeThreshold = 50;
                const diff = touchStartX - touchEndX;
                
                if (Math.abs(diff) > swipeThreshold) {
                    if (diff > 0) {
                        // Swipe left - next slide
                        nextSlide();
                    } else {
                        // Swipe right - previous slide
                        prevSlide();
                    }
                    pauseAutoSlide();
                    setTimeout(resumeAutoSlide, 10000);
                }
            }
            
            // Featured card button actions
            sliderTrack.addEventListener('click', (e) => {
                if (e.target.classList.contains('card-download-btn') || 
                    e.target.parentElement.classList.contains('card-download-btn')) {
                    const btn = e.target.classList.contains('card-download-btn') ? 
                        e.target : e.target.parentElement;
                    const id = btn.getAttribute('data-id');
                    alert(`Downloading featured content (ID: ${id})\n(This is a demo - in a real app, this would start the download)`);
                }
                
                if (e.target.classList.contains('card-play-btn') || 
                    e.target.parentElement.classList.contains('card-play-btn')) {
                    const btn = e.target.classList.contains('card-play-btn') ? 
                        e.target : e.target.parentElement;
                    const id = btn.getAttribute('data-id');
                    alert(`Playing featured content (ID: ${id})\n(This is a demo - in a real app, this would play the song)`);
                }
            });
            
            // Existing functionality from original file
            // Search functionality
            const searchInput = document.getElementById('searchInput');
            const searchBtn = document.getElementById('searchBtn');
            
            const handleSearch = () => {
                const query = searchInput.value.trim();
                if (query) {
                    alert(`Searching for: "${query}"\n(This is a demo - in a real app, this would show results for "${query}")`);
                    searchInput.value = '';
                } else {
                    alert('Please enter a search term');
                }
            };
            
            searchBtn.addEventListener('click', handleSearch);
            searchInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    handleSearch();
                }
            });
            
            // More+ buttons functionality
            const moreButtons = document.querySelectorAll('.more-btn');
            moreButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const sectionTitle = this.parentElement.querySelector('.section-title').textContent;
                    alert(`Loading more content for "${sectionTitle}" section...\n(This is a demo - in a real app, this would load more items)`);
                });
            });
            
            // Download/View buttons functionality - updated to include for you feed
            document.addEventListener('click', function(e) {
                if (e.target.classList.contains('download-btn')) {
                    const id = e.target.getAttribute('data-id');
                    const type = e.target.getAttribute('data-type');
                    let itemType = '';
                    
                    switch(type) {
                        case 'single':
                            itemType = 'Single Track';
                            break;
                        case 'artist':
                            itemType = 'Artist';
                            break;
                        case 'album':
                            itemType = 'Album';
                            break;
                        case 'bollywood':
                            itemType = 'Bollywood Song';
                            break;
                        case 'related':
                            itemType = 'Related Song';
                            break;
                        case 'following':
                            itemType = 'Followed Artist Release';
                            break;
                        case 'following-artist':
                            itemType = 'Followed Artist';
                            break;
                        case 'following-release':
                            itemType = 'Release from Followed Artist';
                            break;
                        case 'foryou':
                            itemType = 'Recommended Song';
                            break;
                        case 'foryou-artist':
                            itemType = 'Recommended Artist';
                            break;
                        case 'foryou-release':
                            itemType = 'Recommended Release';
                            break;
                        case 'foryou-discover':
                            itemType = 'Discovery Playlist';
                            break;
                        default:
                            itemType = 'Item';
                    }
                    
                    alert(`Downloading ${itemType} (ID: ${id})\n(This is a demo - in a real app, this would start the download)`);
                }
                
                // Following feed action buttons
                if (e.target.classList.contains('following-action-btn') || 
                    e.target.parentElement.classList.contains('following-action-btn')) {
                    const btn = e.target.classList.contains('following-action-btn') ? 
                        e.target : e.target.parentElement;
                    const action = btn.textContent.trim();
                    alert(`You clicked "${action}" on a followed artist's post.\n(This is a demo - in a real app, this would perform the action)`);
                }
            });
            
            // Category items functionality
            const categoryItems = document.querySelectorAll('.category-item');
            categoryItems.forEach(item => {
                item.addEventListener('click', function() {
                    const categoryId = this.getAttribute('data-id');
                    const categoryName = this.querySelector('.category-name').textContent;
                    alert(`Opening category: ${categoryName}\n(This is a demo - in a real app, this would show all ${categoryName})`);
                });
            });
        }

        // Initialize the page when DOM is loaded
        document.addEventListener('DOMContentLoaded', initPage);
    </script>
</body>
</html>
